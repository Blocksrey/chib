#!/usr/bin/env bash
set -e
cd $(dirname $0)

packages=(
	# compilers/engines
	clang
	lld
	LuaJIT
	nodejs
	love

	# headers/libraries
	SDL2-devel
	SDL2_image-devel
	SDL2_ttf-devel
	glfw-devel

	# files
	p7zip
	nnn
	nautilus
	rclone

	# drivers
	nvidia

	# xorg
	xinit
	xorg-server
	xorg-input-drivers
	xorg-video-drivers
	xrandr

	# terminal emulator
	alacritty

	# windows
	dmenu
	bspwm
	sxhkd

	# video/audio utilities
	mpv
	yt-dlp
	ffmpeg
	deadbeef
	feh
	pavucontrol

	# general utilities
	aria2
	gimp
	lm_sensors
	qrencode
	git
	firefox
	obs
	flameshot
	steam
)

xbps-install -y void-repo-nonfree
xbps-install -yS ${packages[@]}
