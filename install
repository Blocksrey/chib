#!/usr/bin/bash
##################################################
# Voidy, by Jeffrey Skinner.                     #
# Voidy is personalized specifically for myself, #
# however feel free to use it as you'd like.     #
##################################################

set -e
cd $(dirname $0)

order=(
	dedeb

	nvidia

	intel-undervolt

	nvtop
	nvdrm
	nvidia-nvfbc

	sazanami

	packages

	home

	python

	dedeb
	steam

	ytfetch
	pipewire-pulse
	wpa
	bright
	issue
	grub-modifications
	microcode

	dmenu
	bspwm
	sxhkd
)

for module in ${order[@]}
do
	echo $module: BEGIN
	./$module/install
	echo $module: END
done

echo REBOOT FOR CHANGES
