#!/usr/bin/bash
##################################################
# Voidy, by Jeffrey Skinner.                     #
# Voidy is personalized specifically for myself, #
# however feel free to use it as you'd like.     #
##################################################
set -e
cd $(dirname $0)

xbps-install -y git aria2 make

for module in literal/*; do
	cp $module /usr/bin
done

./essential/install

for module in group/*/; do
	./$module/install
done

for module in single/*; do
	./$module
done

echo You did it, somehow
